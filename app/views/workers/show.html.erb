<%= render 'partials/header1', 
           title: "#{@worker.first_name} #{@worker.last_name}",
           model_name: t('workers.form.model_name'),
           search_path: nil,
           new_path: nil,
           edit_path: edit_business_worker_path(@current_business, @worker),
           additional_crumbs: [
             { name: t('workers.form.model_name'), path: business_workers_path(@current_business) },
             (@worker.persisted? ? { name: "#{@worker.first_name} #{@worker.last_name}", path: business_worker_path(@current_business, @worker) } : { name: t('workers.form.new_title'), path: nil })
           ] %>

<div class="grid grid-cols-6 gap-6">
  <!-- First Name -->
  <div class="col-span-6 sm:col-span-3">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('workers.form.first_name') %></label>
    <div class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
      <%= @worker.first_name %>
    </div>
  </div>
  
  <!-- Last Name -->
  <div class="col-span-6 sm:col-span-3">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('workers.form.last_name') %></label>
    <div class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
      <%= @worker.last_name %>
    </div>
  </div>

  <!-- Profession -->
  <div class="col-span-6 sm:col-span-3">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('workers.form.profession') %></label>
    <div class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
      <%= @worker.profession %>
    </div>
  </div>

  <!-- Unit of Measure -->
  <div class="col-span-6 sm:col-span-3">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('workers.form.unit_of_measure') %></label>
    <div class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5 dark:bg-gray-700 dark:border-gray-600">
      <%= @worker.unit_of_measure.humanize %>
    </div>
  </div>

  <!-- Price Per Unit -->
  <div class="col-span-6 sm:col-span-3">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('workers.form.price_per_unit', currency: @worker.business.currency_symbol) %></label>
    <div class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5 dark:bg-gray-700 dark:border-gray-600">
      <%= @worker.price_per_unit %>
    </div>
  </div>

  <!-- Is Team -->
  <div class="col-span-6 sm:col-span-3 flex items-center">
    <label class="text-sm font-medium text-gray-900 dark:text-white"><%= t('workers.form.is_team') %></label>
    <div class="ml-2">
      <%= @worker.is_team ? t('workers.form.yes') : t('workers.form.no') %>
    </div>
  </div>

  <!-- Description -->
  <div class="col-span-6">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('workers.form.description') %></label>
    <div class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
      <%= @worker.description %>
    </div>
  </div>

  <!-- Custom Fields -->
  <div class="col-span-6">
    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('workers.form.custom_fields') %></h3>
    <% @worker.custom_fields.each do |key, value| %>
      <div class="col-span-6 sm:col-span-3">
        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= key.humanize %></label>
        <div class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
          <%= value %>
        </div>
      </div>
    <% end %>
  </div>
</div>