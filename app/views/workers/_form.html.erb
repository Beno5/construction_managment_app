<%= render 'partials/header1',
           title: @worker.persisted? ? "#{@worker.first_name} #{@worker.last_name}" : t('workers.form.new_title'),
           model_name: t('workers.form.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [
             { name: t('workers.form.model_name'), path: business_workers_path(@current_business) },
             { name: (@worker.persisted? ? "#{@worker.first_name} #{@worker.last_name}" : t('workers.form.new_title')), path: (@worker.persisted? ? business_worker_path(@current_business, @worker) : nil) }
           ] %>

<section class="bg-gray-50 dark:bg-gray-900 pt-5" data-controller="toggle" data-section-id="worker-basic-info" data-user-id="<%= current_user.id %>">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden p-4">
      <div class="flex items-center gap-4 mb-4">
        <h2 class="text-l font-semibold text-gray-900 sm:text-2xl dark:text-white"><%= t("businesses.form.basic_information") %></h2>
        <label class="inline-flex items-center cursor-pointer">
          <input type="checkbox"
                 id="worker-info-toggle"
                 checked
                 class="sr-only peer"
                 data-action="change->toggle#toggle"
                 data-toggle-target="switch">
          <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600 dark:peer-checked:bg-blue-600"></div>
        </label>
      </div>
      <div data-toggle-target="content" class="transition-all duration-300">
        <% if @worker.new_record? %>
          <%= form_with model: [@current_business, @worker],
                        local: true,
                        html: { novalidate: true },
                        data: { controller: "create-form", action: "submit->create-form#validate" } do |f| %>
            <div class="grid grid-cols-6 gap-6">
              <!-- First Name -->
              <div class="col-span-6 sm:col-span-3">
                <%= f.label :first_name, t('workers.form.first_name') + '*', class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.text_field :first_name, required: true,
                      class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                      data: { create_form_target: "input" } %>
              </div>
              <!-- Last Name -->
              <div class="col-span-6 sm:col-span-3">
                <%= f.label :last_name, t('workers.form.last_name'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.text_field :last_name,
                      class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                      data: { create_form_target: "input" } %>
              </div>
              <!-- Profession -->
              <div class="col-span-6 sm:col-span-3">
                <%= f.label :profession, t('workers.form.profession'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.text_field :profession,
                      class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                      data: { create_form_target: "input" } %>
              </div>
              <!-- Unit of Measure -->
              <div class="col-span-6 sm:col-span-3">
                <%= f.label :unit_of_measure, t('workers.form.unit_of_measure'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.select :unit_of_measure,
                      Worker.unit_of_measures.keys.map { |key| [I18n.t("activerecord.attributes.worker.unit_of_measures.#{key}"), key] },
                      { include_blank: true },
                      class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                      data: { create_form_target: "input" } %>
              </div>
              <!-- Price Per Unit -->
              <div class="col-span-6 sm:col-span-3">
                <%= f.label :price_per_unit, t('workers.form.price_per_unit', currency: @worker.business.currency_symbol), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.number_field :price_per_unit, step: 0.01,
                      class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                      data: { create_form_target: "input" } %>
              </div>
              <!-- Description -->
              <div class="col-span-6">
                <%= f.label :description, t('workers.form.description'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.text_area :description, rows: 4,
                      class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                      data: { create_form_target: "input" } %>
              </div>
              <!-- Custom Fields -->
              <div class="col-span-6">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('workers.form.custom_fields') %></h3>
                <%= render 'partials/custom_fields', custom_fields: @worker.custom_fields, model: 'worker' %>
              </div>
            </div>
            <!-- Submit Button -->
            <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
              <%= f.submit(
                    t('workers.form.create_button'),
                    data: { turbo: false, create_form_target: "submit" },
                    class: "text-white bg-primary-700 hover:bg-primary-800 font-medium rounded-lg text-base px-6 py-3"
                  ) %>
            </div>
          <% end %>
        <% else %>
          <div class="grid grid-cols-6 gap-6">
            <!-- First Name -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('workers.form.first_name') %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="worker"
                   data-inline-edit-field-value="first_name"
                   data-inline-edit-type-value="text"
                   data-inline-edit-url-value="<%= business_worker_path(@current_business, @worker) %>"
                   data-inline-edit-original-value="<%= @worker.first_name %>"
                   data-inline-edit-record-updated-at-value="<%= @worker.updated_at.iso8601 %>"
                   data-inline-edit-required-value="true"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @worker.first_name %>
              </div>
            </div>
            <!-- Last Name -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('workers.form.last_name') %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="worker"
                   data-inline-edit-field-value="last_name"
                   data-inline-edit-type-value="text"
                   data-inline-edit-url-value="<%= business_worker_path(@current_business, @worker) %>"
                   data-inline-edit-original-value="<%= @worker.last_name %>"
                   data-inline-edit-record-updated-at-value="<%= @worker.updated_at.iso8601 %>"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @worker.last_name %>
              </div>
            </div>
            <!-- Profession -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('workers.form.profession') %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="worker"
                   data-inline-edit-field-value="profession"
                   data-inline-edit-type-value="text"
                   data-inline-edit-url-value="<%= business_worker_path(@current_business, @worker) %>"
                   data-inline-edit-original-value="<%= @worker.profession %>"
                   data-inline-edit-record-updated-at-value="<%= @worker.updated_at.iso8601 %>"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @worker.profession %>
              </div>
            </div>
            <!-- Unit of Measure -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('workers.form.unit_of_measure') %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="worker"
                   data-inline-edit-field-value="unit_of_measure"
                   data-inline-edit-type-value="select"
                   data-inline-edit-url-value="<%= business_worker_path(@current_business, @worker) %>"
                   data-inline-edit-original-value="<%= @worker.unit_of_measure %>"
                   data-inline-edit-record-updated-at-value="<%= @worker.updated_at.iso8601 %>"
                   data-inline-edit-options-value='<%= Worker.unit_of_measures.keys.index_with { |k| I18n.t("activerecord.attributes.worker.unit_of_measures.#{k}") }.merge("" => "").to_json %>'
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= t_enum(@worker, :unit_of_measure) %>
              </div>
            </div>
            <!-- Price Per Unit -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('workers.form.price_per_unit', currency: @worker.business.currency_symbol) %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="worker"
                   data-inline-edit-field-value="price_per_unit"
                   data-inline-edit-type-value="number"
                   data-inline-edit-url-value="<%= business_worker_path(@current_business, @worker) %>"
                   data-inline-edit-original-value="<%= @worker.price_per_unit %>"
                   data-inline-edit-record-updated-at-value="<%= @worker.updated_at.iso8601 %>"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= "#{@worker.price_per_unit} #{@worker.business.currency_symbol}" %>
              </div>
            </div>
            <!-- Description -->
            <div class="col-span-6">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('workers.form.description') %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover-bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="worker"
                   data-inline-edit-field-value="description"
                   data-inline-edit-type-value="textarea"
                   data-inline-edit-url-value="<%= business_worker_path(@current_business, @worker) %>"
                   data-inline-edit-original-value="<%= @worker.description %>"
                   data-inline-edit-record-updated-at-value="<%= @worker.updated_at.iso8601 %>"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @worker.description %>
              </div>
            </div>
            <!-- Custom Fields -->
            <div class="col-span-6">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('workers.form.custom_fields') %></h3>
              <%= render 'partials/custom_fields', custom_fields: @worker.custom_fields, model: 'worker' %>
            </div>
          </div>
          <div class="flex items-center justify-end gap-3 pt-6 mt-6 border-t border-gray-200 dark:border-gray-700">
            <%= link_to business_workers_path(@current_business),
                data: { controller: "track-changes", action: "click->track-changes#confirmNavigation", turbo: false },
                class: "px-6 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700" do %>
              <%= t('workers.form.back_button', default: 'Back to Workers') %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
