<%= render 'partials/header1', 
           title: "Machines", 
           model_name: "Machines", 
           search_path: business_machines_path(@current_business), 
           new_path: new_business_machine_path(@current_business),
           additional_crumbs: [
             { name: "Machines", path: business_machines_path(@current_business) }
           ] %>
<turbo-frame id="machines-frame">
  <div class="flex flex-col">
    <div class="overflow-x-auto">
      <div class="inline-block align-middle w-full" style="width: -webkit-fill-available;">
        <div class="overflow-hidden shadow">
          <table class="w-full divide-y divide-gray-200 table-auto dark:divide-gray-600">
            <thead class="bg-gray-100 dark:bg-gray-700">
              <tr>
                <th scope="col" class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">Name</th>
                <th scope="col" class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">Category</th>
                <th scope="col" class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">Type</th>
                <th scope="col" class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">Occupied</th>
                <th scope="col" class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
              <% @machines.each do |machine| %>
                <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                  <td class="p-4 text-base font-normal text-gray-900 dark:text-white"><%= machine.name %></td>
                  <td class="p-4 text-base font-normal text-gray-500 dark:text-gray-400"><%= machine.category %></td>
                  <td class="p-4 text-base font-normal text-gray-500 dark:text-gray-400"><%= machine.machine_type %></td>
                  <td class="p-4 text-base font-normal text-gray-500 dark:text-gray-400">
                    <% if machine.is_occupied %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-red-100 text-red-800">Occupied</span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-green-100 text-green-800">Available</span>
                    <% end %>
                  </td>
                  <td class="p-4 space-x-2 whitespace-nowrap">
                    <%= link_to 'Edit', edit_business_machine_path(@current_business, machine), 
                      class: "inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800" %>
                    <%= link_to 'Delete', business_machine_path(@current_business, machine), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                      class: "inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-800" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
