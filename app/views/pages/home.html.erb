<div class="p-4 bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700">
  <!-- Breadcrumbs -->
  <%= render "partials/breadcrumbs"  %>
  <!-- Title and Search/Buttons -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <!-- Title -->
    <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white mb-4 sm:mb-0">
      All Projects
    </h1>
    <!-- Search and Add New Project -->
    <div class="flex justify-between items-center space-x-3">
      <!-- Search -->
      <form action="#" method="GET" class="lg:pr-3">
        <label for="project-search" class="sr-only">Search</label>
        <div class="relative">
          <input type="text" name="search" id="project-search" placeholder="Search for projects" 
            class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
        </div>
      </form>
      <!-- Add New Project Button -->
      <%= link_to new_project_path, class: "inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" do %>
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
        </svg>
        Add New Project
      <% end %>
    </div>
  </div>
</div>
<div class="p-4">
  <div class="grid grid-cols-1 px-4 pt-6 xl:grid-cols-3 xl:gap-4 dark:bg-gray-900">
    <% Project.all.each do |project| %>
      <%= render partial: "partials/card", locals: { project: project }%>
    <% end %>
  </div>
</div>
</div>
