<%= render 'partials/header1', 
           title: @sub_task.persisted? ? t('subtasks.form.edit_title', name: @sub_task.description) : t('subtasks.form.new_title'),
           model_name: t('subtasks.form.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [
             { name: @project.name, path: business_project_path(@current_business, @project) },
             { name: @task.name, path: business_project_task_path(@current_business, @project, @task) },
             (@sub_task.persisted? ? { name: @sub_task.name, path: business_project_task_sub_task_path(@current_business, @project, @task, @sub_task) } : { name: t('subtasks.form.new_title'), path: nil })
           ] %>
<!-- SubTask Form -->
<%= form_with(model: [@current_business, @project, @task, @sub_task], local: true, data: { turbo: true }) do |f| %>
  <div class="grid grid-cols-6 gap-6">
    <!-- Name -->
    <div class="col-span-6 sm:col-span-3">
      <%= f.label :name, t('subtasks.form.name'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.text_field :name, class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" %>
    </div>
    <!-- Description -->
    <div class="col-span-6 sm:col-span-3">
      <%= f.label :description, t('subtasks.form.description'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.text_field :description, class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" %>
    </div>
    <!-- Price Per Unit -->
    <div class="col-span-4 sm:col-span-3">
      <%= f.label :price_per_unit, t('subtasks.form.price_per_unit', currency: @project.business.currency_symbol), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.number_field :price_per_unit, step: 0.01, class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600" %>
    </div>
    <!-- Unit of Measure -->
    <div class="col-span-4 sm:col-span-3">
      <%= f.label :unit_of_measure, t('subtasks.form.unit_of_measure'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.select :unit_of_measure, SubTask.unit_of_measures.keys.map { |u| [u.humanize, u] }, {}, class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600" %>
    </div>
    <!-- Quantity -->
    <div class="col-span-4 sm:col-span-3">
      <%= f.label :quantity, t('subtasks.form.quantity'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.number_field :quantity, step: 1, min: 0, class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600" %>
    </div>
    <!-- Planned Start Date -->
    <div class="col-span-4 sm:col-span-3">
      <%= f.label :planned_start_date, t('subtasks.form.planned_start_date'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.date_field :planned_start_date, class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600" %>
    </div>
    <!-- Planned End Date -->
    <div class="col-span-4 sm:col-span-3">
      <%= f.label :planned_end_date, t('subtasks.form.planned_end_date'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.date_field :planned_end_date, class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600" %>
    </div>
    <!-- Planned Cost -->
    <div class="col-span-4 sm:col-span-3">
      <%= f.label :planned_cost, t('subtasks.form.planned_cost', currency: @project.business.currency_symbol), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.number_field :planned_cost, step: 0.01, class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600" %>
    </div>
    <!-- Custom Fields -->
    <div class="col-span-6">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('subtasks.form.custom_fields') %></h3>
      <%= render 'partials/custom_fields', custom_fields: @sub_task.custom_fields, model: 'sub_task' %>
    </div>
  </div>
  <!-- Submit Button -->
  <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
    <%= f.submit @sub_task.persisted? ? t('subtasks.form.update_button') : t('subtasks.form.create_button'), data: { turbo: false }, class: "text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
  </div>
<% end %>