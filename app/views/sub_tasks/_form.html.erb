<%= render 'partials/header1', 
           title: @sub_task.persisted? ? 
                      t('breadcrums.subtask_overview', name: @sub_task.name_with_position) : 
                      t('subtasks.form.new_title'),
           model_name: t('subtasks.form.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [ 
             { name: t('breadcrums.project_overview', name: @project.name), path: business_project_path(@current_business, @project) },
             { name: t('breadcrums.task_overview', name: @task.name_with_position), path: business_project_task_path(@current_business, @project, @task) },
             { name: (@sub_task.persisted? ? t('breadcrums.subtask_overview', name: @sub_task.name_with_position) : t('subtasks.form.new_title')), path: (@sub_task.persisted? ? business_project_task_sub_task_path(@current_business, @project, @task, @sub_task) : nil) }
           ] %>
<%
  # Build enum options for unit_of_measure select
  unit_options = SubTask.unit_of_measures.keys.each_with_object({}) do |key, hash|
    hash[key] = I18n.t("activerecord.attributes.sub_task.unit_of_measures.#{key}")
  end
%>

<section class="bg-gray-50 dark:bg-gray-900 pt-5" data-controller="toggle toast" data-section-id="subtask-form-basic-info" data-user-id="<%= current_user.id %>">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden p-4">
      <div class="flex items-center gap-4 mb-4">
        <h2 class="text-l font-semibold text-gray-900 sm:text-2xl dark:text-white"><%= t("businesses.form.basic_information") %></h2>
        <label class="inline-flex items-center cursor-pointer">
          <input type="checkbox"
                 id="basic-info-toggle"
                 checked
                 class="sr-only peer"
                 data-action="change->toggle#toggle"
                 data-toggle-target="switch">
          <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600 dark:peer-checked:bg-blue-600"></div>
        </label>
      </div>
      <div data-toggle-target="content" class="transition-all duration-300">
        <% if @sub_task.new_record? %>
          <%= form_with model: [@current_business, @project, @task, @sub_task],
                        local: true,
                        html: { novalidate: true },
                        data: { controller: "create-form", action: "submit->create-form#validate" } do |f| %>
          <div class="grid grid-cols-6 gap-6">
            <!-- Name -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :name, t('subtasks.form.name') + '*', class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_area :name,
                    required: true,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                            focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5
                            dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white",
                    data: { create_form_target: "input", track_changes_target: "input", action: "input->track-changes#markChanged" } %>
            </div>
            <!-- Description -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :description, t('subtasks.form.description'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_area :description,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                            focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5
                            dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white",
                    data: { create_form_target: "input", track_changes_target: "input", action: "input->track-changes#markChanged" } %>
            </div>
            <!-- Price Per Unit -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :price_per_unit, t('subtasks.form.price_per_unit', currency: @project.business.currency_symbol), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.number_field :price_per_unit, step: 0.01,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input", track_changes_target: "input", action: "input->track-changes#markChanged" } %>
            </div>
            <!-- Unit of Measure -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :unit_of_measure, t('subtasks.form.unit_of_measure'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.select :unit_of_measure,
                    options_for_select([['', nil]] + unit_options.map { |key, label| [label, key] }, @sub_task.unit_of_measure),
                    { include_blank: true },
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input" } %>
            </div>
            <!-- Quantity -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :quantity, t('subtasks.form.quantity'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.number_field :quantity, step: 1, min: 0,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input", track_changes_target: "input", action: "input->track-changes#markChanged" } %>
            </div>
            <!-- Planned Cost -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :planned_cost, t('subtasks.form.planned_cost', currency: @project.business.currency_symbol), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.number_field :planned_cost, step: 0.01,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input", track_changes_target: "input", action: "input->track-changes#markChanged" } %>
            </div>
            <!-- Planned Start Date -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :planned_start_date, t('subtasks.form.planned_start_date'),
                    class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.date_field :planned_start_date,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                            block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input", track_changes_target: "input", action: "change->track-changes#markChanged" } %>
            </div>
            <!-- Planned End Date -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :planned_end_date, t('subtasks.form.planned_end_date'),
                    class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.date_field :planned_end_date,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                            block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input", track_changes_target: "input", action: "change->track-changes#markChanged" } %>
            </div>
            <!-- Custom Fields -->
            <div class="col-span-6">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('subtasks.form.custom_fields') %></h3>
              <%= render 'partials/custom_fields', custom_fields: @sub_task.custom_fields, model: 'sub_task' %>
            </div>
          </div>
          <!-- Submit Button -->
          <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
            <%= f.submit t('subtasks.form.create_button'),
                  data: { track_changes_target: "saveButton", create_form_target: "submit", turbo: false },
                  class: "text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-6 py-3 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
          </div>
          <% end %>
        <% else %>
          <%# EDIT MODE: Inline editing only %>
          <div class="grid grid-cols-6 gap-6">
            <!-- Name -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('subtasks.form.name') %>*
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="sub_task"
                   data-inline-edit-field-value="name"
                   data-inline-edit-type-value="text"
                   data-inline-edit-url-value="<%= business_project_task_sub_task_path(@current_business, @project, @task, @sub_task) %>"
                   data-inline-edit-original-value="<%= @sub_task.name %>"
                   data-inline-edit-record-updated-at-value="<%= @sub_task.updated_at.iso8601 %>"
                   data-inline-edit-required-value="true"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @sub_task.name %>
              </div>
            </div>

            <!-- Description -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('subtasks.form.description') %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="sub_task"
                   data-inline-edit-field-value="description"
                   data-inline-edit-type-value="textarea"
                   data-inline-edit-url-value="<%= business_project_task_sub_task_path(@current_business, @project, @task, @sub_task) %>"
                   data-inline-edit-original-value="<%= @sub_task.description %>"
                   data-inline-edit-record-updated-at-value="<%= @sub_task.updated_at.iso8601 %>"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @sub_task.description %>
              </div>
            </div>

            <!-- Quantity -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('subtasks.form.quantity') %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="sub_task"
                   data-inline-edit-field-value="quantity"
                   data-inline-edit-type-value="number"
                   data-inline-edit-url-value="<%= business_project_task_sub_task_path(@current_business, @project, @task, @sub_task) %>"
                   data-inline-edit-original-value="<%= @sub_task.quantity %>"
                   data-inline-edit-record-updated-at-value="<%= @sub_task.updated_at.iso8601 %>"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @sub_task.quantity %>
              </div>
            </div>

            <!-- Planned Cost -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('subtasks.form.planned_cost', currency: @project.business.currency_symbol) %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="sub_task"
                   data-inline-edit-field-value="planned_cost"
                   data-inline-edit-type-value="number"
                   data-inline-edit-url-value="<%= business_project_task_sub_task_path(@current_business, @project, @task, @sub_task) %>"
                   data-inline-edit-original-value="<%= @sub_task.planned_cost %>"
                   data-inline-edit-record-updated-at-value="<%= @sub_task.updated_at.iso8601 %>"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @sub_task.planned_cost %>
              </div>
            </div>

            <!-- Price per unit -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('subtasks.form.price_per_unit', currency: @project.business.currency_symbol) %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="sub_task"
                   data-inline-edit-field-value="price_per_unit"
                   data-inline-edit-type-value="number"
                   data-inline-edit-url-value="<%= business_project_task_sub_task_path(@current_business, @project, @task, @sub_task) %>"
                   data-inline-edit-original-value="<%= @sub_task.price_per_unit %>"
                   data-inline-edit-record-updated-at-value="<%= @sub_task.updated_at.iso8601 %>"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @sub_task.price_per_unit %>
              </div>
            </div>

            <!-- Unit of Measure -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('subtasks.form.unit_of_measure') %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="sub_task"
                   data-inline-edit-field-value="unit_of_measure"
                   data-inline-edit-type-value="select"
                   data-inline-edit-url-value="<%= business_project_task_sub_task_path(@current_business, @project, @task, @sub_task) %>"
                   data-inline-edit-original-value="<%= @sub_task.unit_of_measure %>"
                   data-inline-edit-record-updated-at-value="<%= @sub_task.updated_at.iso8601 %>"
                   data-inline-edit-options-value='<%= { "" => "" }.merge(unit_options).to_json %>'
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @sub_task.unit_of_measure.present? ? I18n.t("activerecord.attributes.sub_task.unit_of_measures.#{@sub_task.unit_of_measure}") : "" %>
              </div>
            </div>

            <!-- Planned Start Date -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('subtasks.form.planned_start_date') %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="sub_task"
                   data-inline-edit-field-value="planned_start_date"
                   data-inline-edit-type-value="date"
                   data-inline-edit-url-value="<%= business_project_task_sub_task_path(@current_business, @project, @task, @sub_task) %>"
                   data-inline-edit-original-value="<%= @sub_task.planned_start_date %>"
                   data-inline-edit-record-updated-at-value="<%= @sub_task.updated_at.iso8601 %>"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @sub_task.planned_start_date ? I18n.l(@sub_task.planned_start_date) : '' %>
              </div>
            </div>

            <!-- Planned End Date -->
            <div class="col-span-6 sm:col-span-3">
              <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                <%= t('subtasks.form.planned_end_date') %>
              </label>
              <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                   data-controller="inline-edit"
                   data-inline-edit-model-value="sub_task"
                   data-inline-edit-field-value="planned_end_date"
                   data-inline-edit-type-value="date"
                   data-inline-edit-url-value="<%= business_project_task_sub_task_path(@current_business, @project, @task, @sub_task) %>"
                   data-inline-edit-original-value="<%= @sub_task.planned_end_date %>"
                   data-inline-edit-record-updated-at-value="<%= @sub_task.updated_at.iso8601 %>"
                   data-action="dblclick->inline-edit#activate"
                   title="<%= t('tooltips.double_click_to_edit') %>">
                <%= @sub_task.planned_end_date ? I18n.l(@sub_task.planned_end_date) : '' %>
              </div>
            </div>

            <!-- Custom Fields -->
            <div class="col-span-6">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('subtasks.form.custom_fields') %></h3>
              <%= render 'partials/custom_fields', custom_fields: @sub_task.custom_fields, model: 'sub_task' %>
            </div>
          </div>

          <!-- Back Button -->
          <div class="flex items-center justify-end gap-3 pt-6 mt-6 border-t border-gray-200 dark:border-gray-700">
            <%= link_to business_project_task_path(@current_business, @project, @task),
                data: { controller: "track-changes", action: "click->track-changes#confirmNavigation", turbo: false },
                class: "px-6 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700" do %>
              <%= t('subtasks.form.back_button', default: 'Back to Task') %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
