<%= render 'partials/header1',
           title: t('users.edit.title'),
           model_name: t('users.edit.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [
             { name: t('users.edit.model_name'), path: edit_user_registration_path(locale: I18n.locale) }
           ] %>

<section class="bg-gray-50 dark:bg-gray-900 pt-5" data-controller="toggle" data-section-id="user-basic-info" data-user-id="<%= current_user.id %>">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden p-4">
      <div class="flex items-center gap-4 mb-4">
        <h2 class="text-l font-semibold text-gray-900 sm:text-2xl dark:text-white">
          <%= t("users.edit.basic_information") %>
        </h2>
        <label class="inline-flex items-center cursor-pointer">
          <input type="checkbox"
                 id="user-info-toggle"
                 checked
                 class="sr-only peer"
                 data-action="change->toggle#toggle"
                 data-toggle-target="switch">
          <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600 dark:peer-checked:bg-blue-600"></div>
        </label>
      </div>
      <div data-toggle-target="content" class="transition-all duration-300">
        <div class="grid grid-cols-6 gap-6">
          <!-- Name -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('users.edit.name') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="user"
                 data-inline-edit-field-value="name"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= registration_path(resource_name, locale: I18n.locale) %>"
                 data-inline-edit-original-value="<%= resource.name %>"
                 data-inline-edit-record-updated-at-value="<%= resource.updated_at.iso8601 %>"
                 data-inline-edit-required-value="true"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= resource.name %>
            </div>
          </div>

          <!-- Email -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('users.edit.email') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="user"
                 data-inline-edit-field-value="email"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= registration_path(resource_name, locale: I18n.locale) %>"
                 data-inline-edit-original-value="<%= resource.email %>"
                 data-inline-edit-record-updated-at-value="<%= resource.updated_at.iso8601 %>"
                 data-inline-edit-required-value="true"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= resource.email %>
            </div>
          </div>

          <!-- Locale -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('users.edit.locale') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="user"
                 data-inline-edit-field-value="locale"
                 data-inline-edit-type-value="select"
                 data-inline-edit-url-value="<%= registration_path(resource_name, locale: I18n.locale) %>"
                 data-inline-edit-original-value="<%= resource.locale %>"
                 data-inline-edit-record-updated-at-value="<%= resource.updated_at.iso8601 %>"
                 data-inline-edit-options-value='<%= [["English", "en"], ["Srpski", "sr"]].to_h { |label, val| [val, label] }.to_json %>'
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= resource.locale.present? ? (resource.locale == "sr" ? "Srpski" : "English") : "-" %>
            </div>
          </div>

          <!-- Password (inline change) -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('users.edit.password') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="user"
                 data-inline-edit-field-value="password"
                 data-inline-edit-type-value="password"
                 data-inline-edit-url-value="<%= registration_path(resource_name, locale: I18n.locale) %>"
                 data-inline-edit-original-value=""
                 data-inline-edit-record-updated-at-value="<%= resource.updated_at.iso8601 %>"
                 data-inline-edit-placeholder-value="<%= t('users.edit.new_password_placeholder', default: 'Unesite novu lozinku') %>"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              ••••••••
            </div>
          </div>
        </div>

        <!-- Delete account -->
        <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
          <%= button_to t('users.edit.delete_account'),
                  registration_path(resource_name, locale: I18n.locale),
                  method: :delete,
                  data: { turbo_confirm: t('users.edit.delete_confirm') },
                  class: "text-white bg-red-600 hover:bg-red-700 font-medium rounded-lg text-base px-6 py-3 transition-colors duration-200" %>
        </div>
      </div>
    </div>
  </div>
</section>
