<%= render 'partials/header1',
           title: t('users.edit.title'),
           model_name: t('users.edit.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [
             { name: t('users.edit.model_name'), path: edit_user_registration_path(locale: I18n.locale) }
           ] %>
<section class="bg-gray-50 dark:bg-gray-900 pt-5">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden p-4">
      <%= form_with model: resource,
                    url: registration_path(resource_name, locale: I18n.locale),
                    local: true,
                    data: { controller: "track-changes", action: "submit->track-changes#reset" },
                    html: { method: :put } do |f| %>
        <!-- Osnovne informacije -->
        <h2 class="text-l font-semibold text-gray-900 sm:text-2xl dark:text-white mb-4">
          <%= t("users.edit.basic_information") %>
        </h2>
        <div class="grid grid-cols-6 gap-6">
          <!-- Name -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :name, t('users.edit.name'),
                        class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :name,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-0 focus:border-gray-400 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Email -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :email, t('users.edit.email'),
                        class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.email_field :email, autocomplete: "email",
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-0 focus:border-gray-400 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Locale -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :locale, t('users.edit.locale'),
                        class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.select :locale, [["English", "en"], ["Srpski", "sr"]],
                  {},
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-0 focus:border-gray-400 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "change->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Password (tretiran kao normalan atribut) -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :password, t('users.edit.password'),
              class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.password_field :password, autocomplete: "new-password",
        placeholder: t('users.edit.password_placeholder', default: 'Ostavi prazno ako ne želiš promijeniti'),
        class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-0 focus:border-gray-400 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
        data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
            <% if resource.errors[:password].any? %>
              <p class="text-sm text-red-600 mt-1"><%= resource.errors[:password].first %></p>
            <% end %>
          </div>
        </div>
        <!-- Save Button -->
        <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
          <%= f.submit t('users.edit.update_button'),
                      data: { track_changes_target: "saveButton", turbo: false },
                      class: "hidden text-white bg-primary-700 hover:bg-primary-800 font-medium rounded-lg text-base px-6 py-3" %>
        </div>
      <% end %>
      <!-- Delete account -->
      <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
        <%= button_to t('users.edit.delete_account'),
                registration_path(resource_name, locale: I18n.locale),
                method: :delete,
                data: { turbo_confirm: t('users.edit.delete_confirm') },
                class: "text-white bg-red-600 hover:bg-red-700 font-medium rounded-lg text-base px-6 py-3 transition-colors duration-200" %>
      </div>
    </div>
  </div>
</section>
