<% @user ||= User.new %>
  <%= link_to root_path, class: "flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10 dark:text-white" do %>
    <img src="<%= asset_path('logo.png') %>" class="mr-4 h-11" alt="FlowBite Logo">
    <span>Flowbite</span>
  <% end %>
  <!-- Card -->
  <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
      <%= t('devise.registrations.new.create_account', default: 'Create a Free Account') %>
    </h2>
    <%= form_with model: @user, url: user_registration_path, method: :post, local: true, data: { turbo: false }, class: "mt-8 space-y-6" do |f| %>
      <div>
        <%= f.label :email, t('devise.registrations.new.email', default: "Your email"), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.email_field :email, placeholder: "name@company.com", required: true, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
      </div>
      <div>
        <%= f.label :password, t('devise.registrations.new.password', default: "Your password"), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.password_field :password, placeholder: "••••••••", required: true, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
      </div>
      <div>
        <%= f.label :password_confirmation, t('devise.registrations.new.password_confirmation', default: "Confirm password"), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.password_field :password_confirmation, placeholder: "••••••••", required: true, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
      </div>
      <div class="flex items-start">
        <div class="flex items-center h-5">
          <%= check_box_tag :terms, 'accepted', false, required: true, class: "w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:focus:ring-primary-600 dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600" %>
        </div>
        <div class="ml-3 text-sm">
          <label for="terms" class="font-medium text-gray-900 dark:text-white">
            <%= t('devise.registrations.new.accept_terms', default: "I accept the") %>
            <%= link_to t('devise.registrations.new.terms_link', default: "Terms and Conditions"), "#", class: "text-primary-700 hover:underline dark:text-primary-500" %>
          </label>
        </div>
      </div>
      <%= f.submit t('devise.registrations.new.create_account', default: 'Create account'), class: "w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
    <% end %>
    <div class="text-sm font-medium text-gray-500 dark:text-gray-400">
      <%= t('devise.registrations.new.already_have_account', default: "Already have an account?") %>
      <%= link_to t('devise.registrations.new.login_here', default: "Login here"), new_user_session_path, class: "text-primary-700 hover:underline dark:text-primary-500" %>
    </div>
  </div>
