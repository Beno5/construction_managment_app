  <%= link_to root_path, class: "flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10 dark:text-white" do %>
  <img src="<%= asset_path('logo_con.png') %>" class="mr-4 h-11" alt="FlowBite Logo">
  <span></span>
<% end %>
<!-- Card -->
<div class="w-full max-w-xl p-6 space-y-8 bg-white rounded-lg shadow sm:p-8 dark:bg-gray-800">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
    <%= t('devise.passwords.edit.title', default: 'Reset your password') %>
  </h2>
  <% password_error = resource.errors[:password].first %>
  <% confirmation_error = resource.errors[:password_confirmation].first %>
  <% password_too_short = resource.errors.details.fetch(:password, []).any? { |err| err[:error] == :too_short } %>
  <% confirmation_mismatch = resource.errors.details.fetch(:password_confirmation, []).any? { |err| err[:error] == :confirmation } %>
  <% if flash[:alert].blank? && (password_too_short || confirmation_mismatch) %>
    <% flash.now[:alert] = if password_too_short
      t('devise.passwords.edit.flash.too_short', count: @minimum_password_length)
    else
      t('devise.passwords.edit.flash.mismatch')
    end %>
  <% end %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "mt-8 space-y-6" }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <div>
      <%= f.label :password, t('devise.passwords.edit.password_label', default: 'New password'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">
          <%= t('devise.passwords.edit.password_hint', default: '(%{count} characters minimum)', count: @minimum_password_length) %>
        </p>
      <% end %>
      <%= f.password_field :password, placeholder: "••••••••", required: true, autofocus: true, autocomplete: "new-password", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 #{'border-red-500 focus:ring-red-500 focus:border-red-500' if password_error}" %>
      <% if password_error.present? %>
        <p class="mt-2 text-sm text-red-600 dark:text-red-500"><%= password_error %></p>
      <% end %>
    </div>
    <div>
      <%= f.label :password_confirmation, t('devise.passwords.edit.password_confirmation_label', default: 'Confirm new password'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.password_field :password_confirmation, placeholder: "••••••••", required: true, autocomplete: "new-password", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 #{'border-red-500 focus:ring-red-500 focus:border-red-500' if confirmation_error}" %>
      <% if confirmation_error.present? %>
        <p class="mt-2 text-sm text-red-600 dark:text-red-500"><%= confirmation_error %></p>
      <% end %>
    </div>
    <%= f.submit t('devise.passwords.edit.submit', default: 'Reset password'), class: "w-full px-5 py-3 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
  <% end %>
</div>
