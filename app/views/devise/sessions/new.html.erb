<%= link_to root_path, class: "flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10 dark:text-white" do %>
  <%= image_tag 'logo_con.png', alt: "Conormio Logo", class: "mr-4 h-11" %>
  <span></span>
<% end %>
<!-- Card -->
<div class="relative w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
<div class="flex items-center justify-between">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
    <%= t('devise.sessions.new.title') %>
  </h2>
  <div class="text-sm text-gray-500 dark:text-gray-400">
    <ul class="flex items-center space-x-2">
      <li>
        <%= link_to "English", url_for(locale: :en),
              class: "#{I18n.locale == :en ? 'font-semibold text-primary-700' : 'hover:underline hover:text-primary-600'}",
              data: { turbo: false } %>
      </li>
      <li>|</li>
      <li>
        <%= link_to "Srpski", url_for(locale: :sr),
              class: "#{I18n.locale == :sr ? 'font-semibold text-primary-700' : 'hover:underline hover:text-primary-600'}",
              data: { turbo: false } %>
      </li>
    </ul>
  </div>
</div>

  <%= form_with model: resource, url: user_session_path, method: :post, class: "mt-8 space-y-6", data: { turbo: "false" } do |f| %>
    <div>
      <%= f.label :email, t('devise.sessions.new.email_label'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.email_field :email, placeholder: "name@company.com", required: true, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
    </div>
    <div>
      <%= f.label :password, t('devise.sessions.new.password_label'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= f.password_field :password, placeholder: "••••••••", required: true, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
    </div>
    <div class="flex items-start">
      <div class="flex items-center h-5">
        <%= f.check_box :remember_me, class: "w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:focus:ring-primary-600 dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600" %>
      </div>
      <div class="ml-3 text-sm">
        <%= f.label :remember_me, t('devise.sessions.new.remember_me'), class: "font-medium text-gray-900 dark:text-white" %>
      </div>
      <%= link_to t('devise.sessions.new.lost_password'), new_user_password_path, class: "ml-auto text-sm text-primary-700 hover:underline dark:text-primary-500" %>
    </div>
    <%= f.submit t('devise.sessions.new.submit'), class: "w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
  <% end %>
  <div class="text-sm font-medium text-gray-500 dark:text-gray-400">
    <%= t('devise.sessions.new.not_registered') %>
    <%= link_to t('devise.sessions.new.create_account'), new_user_registration_path, class: "text-primary-700 hover:underline dark:text-primary-500" %>
  </div>
</div>
