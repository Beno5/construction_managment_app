<section class="bg-gray-50 dark:bg-gray-900 pt-5 mb-5" data-controller="toggle" data-section-id="project-tasks-table" data-user-id="<%= current_user.id %>">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow">
      <!-- Header -->
      <div class="p-4">
        <div class="flex items-center gap-4 mb-4">
          <h2 class="text-l font-semibold text-gray-900 sm:text-2xl dark:text-white"><%= t('projects.show.tasks_and_subtasks') %></h2>
          <label class="inline-flex items-center cursor-pointer">
            <input type="checkbox"
                   id="tasks-table-toggle"
                   checked
                   class="sr-only peer"
                   data-action="change->toggle#toggle"
                   data-toggle-target="switch">
            <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600 dark:peer-checked:bg-blue-600"></div>
          </label>
        </div>
      </div>
      <div data-toggle-target="content" class="transition-all duration-300">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 p-4 pt-0">
        <div class="w-full md:w-1/2">
          <form action="<%= business_project_path(@current_business, @project) %>" method="GET" data-turbo-frame="tasks-frame" class="lg:pr-3" data-controller="search">
            <label for="search" class="sr-only">Search</label>
            <div class="relative mt-1 lg:w-64 xl:w-96">
              <input type="text" name="search" id="search" placeholder="<%= t('table.search.task', default: t('table.search.default')) %>"
                     class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                     data-action="input->search#performSearch">
            </div>
          </form>
        </div>
        <div class="w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 items-stretch md:items-center justify-end md:space-x-3 flex-shrink-0">
          <%= link_to new_business_project_task_path(@current_business, @project), data: { turbo: false},  class: "inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" do %>
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6 a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
            </svg>
            <%= t('tasks.add_new') %>
          <% end %>
        </div>
      </div>
      <!-- Table - Disable caching to ensure fresh renders -->
      <turbo-frame id="tasks-frame" data-turbo-cache="false">
        <div class="overflow-x-auto">
          <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400" data-controller="sort">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
              <tr>
                <th scope="col" class="px-4 py-3"></th>
                <th scope="col" class="px-4 py-3" role="button" data-action="click->sort#sort" data-sort-target="header" data-sort-index="1">
                  <div class="flex items-center gap-1 cursor-pointer select-none">
                    <span><%= t('tasks.table.id') %></span>
                    <span class="text-gray-400" aria-hidden="true" data-sort-target="arrow" data-sort-index="1">↕</span>
                  </div>
                </th>
                <!-- Fixed width column for Name -->
                <th scope="col" class="px-4 py-3 w-88" role="button" data-action="click->sort#sort" data-sort-target="header" data-sort-index="2">
                  <div class="flex items-center gap-1 cursor-pointer select-none">
                    <span><%= t('tasks.table.name') %></span>
                    <span class="text-gray-400" aria-hidden="true" data-sort-target="arrow" data-sort-index="2">↕</span>
                  </div>
                </th>
                <!-- Fixed width column for Description -->
                <th scope="col" class="px-4 py-3 w-88" role="button" data-action="click->sort#sort" data-sort-target="header" data-sort-index="3">
                  <div class="flex items-center gap-1 cursor-pointer select-none">
                    <span><%= t('tasks.table.description') %></span>
                    <span class="text-gray-400" aria-hidden="true" data-sort-target="arrow" data-sort-index="3">↕</span>
                  </div>
                </th>
                <th scope="col" class="px-4 py-3" role="button" data-action="click->sort#sort" data-sort-target="header" data-sort-index="4">
                  <div class="flex items-center gap-1 cursor-pointer select-none">
                    <span><%= t('subtasks.form.unit_of_measure') %></span>
                    <span class="text-gray-400" aria-hidden="true" data-sort-target="arrow" data-sort-index="4">↕</span>
                  </div>
                </th>
                <th scope="col" class="px-4 py-3" role="button" data-action="click->sort#sort" data-sort-target="header" data-sort-index="5">
                  <div class="flex items-center gap-1 cursor-pointer select-none">
                    <span><%= t('subtasks.form.quantity') %></span>
                    <span class="text-gray-400" aria-hidden="true" data-sort-target="arrow" data-sort-index="5">↕</span>
                  </div>
                </th>
                <th scope="col" class="px-4 py-3" role="button" data-action="click->sort#sort" data-sort-target="header" data-sort-index="6">
                  <div class="flex items-center gap-1 cursor-pointer select-none">
                    <span><%= t('subtasks.form.planned_cost', currency: @project.business.currency_symbol) %></span>
                    <span class="text-gray-400" aria-hidden="true" data-sort-target="arrow" data-sort-index="6">↕</span>
                  </div>
                </th>
                <th scope="col" class="px-4 py-3" role="button" data-action="click->sort#sort" data-sort-target="header" data-sort-index="7">
                  <div class="flex items-center gap-1 cursor-pointer select-none">
                    <span><%= t('subtasks.form.price_per_unit', currency: @project.business.currency_symbol) %></span>
                    <span class="text-gray-400" aria-hidden="true" data-sort-target="arrow" data-sort-index="7">↕</span>
                  </div>
                </th>
                <th scope="col" class="px-4 py-3" role="button" data-action="click->sort#sort" data-sort-target="header" data-sort-index="8">
                  <div class="flex items-center gap-1 cursor-pointer select-none">
                    <span><%= t('tasks.table.planned_start_date') %></span>
                    <span class="text-gray-400" aria-hidden="true" data-sort-target="arrow" data-sort-index="8">↕</span>
                  </div>
                </th>
                <th scope="col" class="px-4 py-3" role="button" data-action="click->sort#sort" data-sort-target="header" data-sort-index="9">
                  <div class="flex items-center gap-1 cursor-pointer select-none">
                    <span><%= t('tasks.table.planned_end_date') %></span>
                    <span class="text-gray-400" aria-hidden="true" data-sort-target="arrow" data-sort-index="9">↕</span>
                  </div>
                </th>
                <th scope="col" class="px-4 py-3">
                  <span class="sr-only"><%= t('subtasks.form.actions', default: 'Actions') %></span>
                </th>
                <th scope="col" class="px-4 py-3">
                  <span class="sr-only"><%= t('tasks.table.actions') %></span>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @tasks.ordered_by_position.each_with_index do |task, index| %>
                <!-- TASK ROW -->
                <tr id="<%= dom_id(task) %>" class="border-b dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700" data-sort-parent="true" data-sort-group="task-<%= task.id %>">
                  <td class="px-4 py-3" data-sort-value="<%= index %>">
                    <% if task.sub_tasks.any? %>
                      <button type="button" class="toggle-sub-tasks" data-target=".sub-tasks-of-<%= index %>">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 chevron-icon" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                      </button>
                    <% end %>
                  </td>
                  <td class="px-4 py-3 font-bold" data-sort-value="<%= task.position.to_s.downcase %>"><%= task.position %></td>
                  <!-- Fixed width task name cell with text wrapping and tooltip -->
                  <td class="px-4 py-3 font-bold w-88 break-words" title="<%= task.name %>" data-sort-value="<%= task.name.to_s.downcase %>">
                    <%= task.name&.truncate(150) %>
                  </td>
                  <!-- Fixed width task description cell with text wrapping and tooltip -->
                  <td class="px-4 py-3 font-bold w-88 break-words" title="<%= task.description %>" data-sort-value="<%= task.description.to_s.downcase %>">
                    <%= task.description&.truncate(150) %>
                  </td>
                  <td class="px-4 py-3 font-bold" data-sort-value=""><!-- placeholder for grouped rows --></td>
                  <td class="px-4 py-3 font-bold" data-sort-value=""></td>
                  <td class="px-4 py-3 font-bold" data-sort-value=""></td>
                  <td class="px-4 py-3 font-bold" data-sort-value=""></td>
                  <td class="px-4 py-3 font-bold" data-sort-value="<%= task.planned_start_date.to_s.downcase %>"><%= I18n.l(task.planned_start_date) if task.planned_start_date %></td>
                  <td class="px-4 py-3 font-bold" data-sort-value="<%= task.planned_end_date.to_s.downcase %>"><%= I18n.l(task.planned_end_date) if task.planned_end_date %></td>
                  <td class="px-4 py-3" data-sort-value="">
                    <%= link_to new_business_project_task_sub_task_path(@business, @project, task),
            data: { turbo: false },
            class: "inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-gray-800 bg-gray-200 rounded-lg hover:bg-gray-300 focus:ring-4 focus:ring-gray-300 transition" do %>
                      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
                      </svg>
                      <%= t('subtasks.actions.add_new') %>
                    <% end %>
                  </td>
                  <td class="px-4 py-3 flex items-center justify-end" data-sort-value="">
                    <button id="<%= "task-#{task.id}-dropdown-button" %>" 
    data-dropdown-toggle="<%= "task-#{task.id}-dropdown" %>" 
    class="inline-flex items-center p-0.5 text-sm font-medium text-center text-gray-500 hover:text-gray-800 rounded-lg focus:outline-none dark:text-gray-400 dark:hover:text-gray-100" 
    type="button">
                      <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20">
                        <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
                      </svg>
                    </button>
                    <div id="<%= "task-#{task.id}-dropdown" %>" 
       class="hidden z-10 w-44 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600">
                      <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="<%= "task-#{task.id}-dropdown-button" %>">
                        <li>
                          <%= link_to t('tasks.actions.show'), business_project_task_path(@current_business, @project, task),
        data: { turbo: false },
        class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
                        </li>
                        <li>
                          <%= link_to t('tasks.actions.delete'), business_project_task_path(@current_business, @project, task),
        method: :delete,
        data: { turbo_confirm: t('confirmations.delete', name: task.name), turbo_method: :delete },
        class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
                        </li>
                      </ul>
                    </div>
                  </td>
                </tr>
                <!-- SUBTASK ROWS -->
                <% task.sub_tasks.ordered_by_position.each do |sub_task| %>
                  <tr id="<%= dom_id(sub_task) %>" class="sub-tasks-of-<%= index %> border-b dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700" data-sort-child="true" data-sort-group="task-<%= task.id %>">
                    <td class="px-4 py-3" data-sort-value=""></td>
                    <td class="px-4 py-3 pl-8 text-gray-500" data-sort-value="<%= sub_task.show_position.to_s.downcase %>"><%= sub_task.show_position %></td>
                    <!-- Fixed width subtask name cell with text wrapping and tooltip -->
                    <td class="px-4 py-3 w-88 break-words" title="<%= sub_task.name %>" data-sort-value="<%= sub_task.name.to_s.downcase %>">
                      <%= sub_task.name&.truncate(150) %>
                    </td>
                    <!-- Fixed width subtask description cell with text wrapping and tooltip -->
                    <td class="px-4 py-3 w-88 break-words" title="<%= sub_task.description %>" data-sort-value="<%= sub_task.description.to_s.downcase %>">
                      <%= sub_task.description&.truncate(150) %>
                    </td>
                    <td class="px-4 py-3" data-sort-value="<%= t_enum(sub_task, :unit_of_measure).to_s.downcase %>"><%= t_enum(sub_task, :unit_of_measure) if sub_task.unit_of_measure %></td>
                    <td class="px-4 py-3" data-sort-value="<%= sub_task.quantity.to_s.downcase %>"><%= sub_task.quantity %></td>
                    <td class="px-4 py-3" data-sort-value="<%= sub_task.planned_cost.to_s.downcase %>"><%= sub_task.planned_cost %></td>
                    <td class="px-4 py-3" data-sort-value="<%= sub_task.price_per_unit.to_s.downcase %>"><%= sub_task.price_per_unit %></td>
                    <td class="px-4 py-3" data-sort-value="<%= sub_task.planned_start_date.to_s.downcase %>"><%= I18n.l(sub_task.planned_start_date) if sub_task.planned_start_date %></td>
                    <td class="px-4 py-3" data-sort-value="<%= sub_task.planned_end_date.to_s.downcase %>"><%= I18n.l(sub_task.planned_end_date) if sub_task.planned_end_date %></td>
                    <td class="px-4 py-3" data-sort-value=""></td>
                    <td class="px-4 py-3 flex items-center justify-end" data-sort-value="">
                      <button id="<%= "sub-task-#{sub_task.id}-dropdown-button" %>" 
    data-dropdown-toggle="<%= "sub-task-#{sub_task.id}-dropdown" %>" 
    class="inline-flex items-center p-0.5 text-sm font-medium text-center text-gray-500 hover:text-gray-800 rounded-lg focus:outline-none dark:text-gray-400 dark:hover:text-gray-100" 
    type="button">
                        <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20">
                          <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
                        </svg>
                      </button>
                      <div id="<%= "sub-task-#{sub_task.id}-dropdown" %>" 
       class="hidden z-10 w-44 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600">
                        <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="<%= "sub-task-#{sub_task.id}-dropdown-button" %>">
                          <li>
                            <%= link_to t('subtasks.actions.show'), business_project_task_sub_task_path(@business, @project, task, sub_task),
        data: { turbo: false },
        class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
                          </li>
                          <li>
                            <%= link_to t('subtasks.actions.delete'), business_project_task_sub_task_path(@business, @project, task, sub_task, delete_from_project: true),
        method: :delete,
        data: { turbo_confirm: t('confirmations.delete', name: sub_task.name), turbo_method: :delete },
        class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
                          </li>
                        </ul>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= render "partials/nav_pages",
           collection: @tasks,
           model_name: "Tasks",
           turbo_frame_id: "tasks-frame" %>

      </turbo-frame>
      </div>
    </div>
  </div>
</section>
<script>
  document.addEventListener('click', (event) => {
    const button = event.target.closest('.toggle-sub-tasks');
    if (button) {
      const targetRows = document.querySelectorAll(button.dataset.target);
      const icon = button.querySelector('.chevron-icon');
      targetRows.forEach(row => row.classList.toggle('hidden'));
      if (targetRows[0].classList.contains('hidden')) {
        icon.innerHTML = `<path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />`;
      } else {
        icon.innerHTML = `<path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />`;
      }
    }
  });
</script>
