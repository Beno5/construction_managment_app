<div class="block sm:flex items-center justify-between border-gray-200 lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700">
  <!-- Breadcrumbs -->
  <div class="w-full mb-1">
    <div class="mb-4">
      <%= render 'partials/breadcrumbs',
             additional_crumbs: local_assigns[:additional_crumbs] || [] %>
      <div class="flex justify-between items-center">
        <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">
          <%= local_assigns[:title] || "Default Title" %>
        </h1>
      </div>
    </div>
    <div class="sm:flex mb-4">
      <% if local_assigns[:show_search].present? %>
        <!-- Search Bar -->
        <% if local_assigns[:search_path].present? %>
          <form action="<%= local_assigns[:search_path] %>" method="GET" data-turbo-frame="<%= local_assigns[:frame_id] || "#{local_assigns[:model_name].downcase}-frame" %>" class="lg:pr-3" data-controller="search">
            <label for="search" class="sr-only"><%= t('table.search.label', default: 'Search') %></label>
            <div class="relative mt-1 lg:w-64 xl:w-96">
              <input type="text" name="search" id="search" placeholder="<%= t("table.search.project", default: t('table.search.default')) %>" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" data-action="input->search#performSearch">
            </div>
          </form>
        <% end %>
        <!-- Buttons -->
        <div class="flex items-center ml-auto space-x-2 sm:space-x-3"
             data-controller="ai-import-status"
             data-ai-import-status-status-url-value="<%= import_status_business_projects_path(current_business) %>">
          <% if local_assigns[:new_path].present? %>
            <%= link_to local_assigns[:new_path],
                class: "inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" do %>
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
              </svg>
              <%= t('table.new.project') %>
            <% end %>
          <% end %>

          <div class="relative">
            <!-- Import Status Notification (hidden by default) -->
            <div data-ai-import-status-target="notification"
                 class="hidden absolute bottom-full mb-2 right-0 w-80 bg-blue-50 dark:bg-blue-900 border border-blue-200 dark:border-blue-700 rounded-lg shadow-lg p-3 z-50">
              <div class="flex items-start space-x-3">
                <!-- Spinner -->
                <div data-ai-import-status-target="spinner" class="flex-shrink-0 mt-0.5">
                  <svg class="animate-spin h-5 w-5 text-blue-600 dark:text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </div>

                <!-- Message -->
                <div data-ai-import-status-target="message" class="flex-1 text-sm">
                  <div class="flex items-center justify-between">
                    <p class="font-semibold text-blue-800 dark:text-blue-200"><%= t('projects.import.in_progress') %></p>
                    <!-- Stop Import Button -->
                    <button type="button"
                            data-action="click->ai-import-status#cancelImport"
                            class="inline-flex items-center px-2 py-1 text-xs font-medium text-red-700 bg-red-50 border border-red-200 rounded hover:bg-red-100 focus:ring-2 focus:ring-red-300 dark:bg-red-900 dark:text-red-200 dark:border-red-700 dark:hover:bg-red-800">
                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                      <%= t('projects.import.stop_import') %>
                    </button>
                  </div>
                  <p class="text-blue-600 dark:text-blue-300 mt-1">
                    <span data-filename></span>
                  </p>
                </div>
              </div>
            </div>

            <%= form_with url: import_ai_business_projects_path(current_business),
                method: :post,
                multipart: true,
                data: { turbo: false },
                html: { id: "ai-import-form", class: "inline-block" } do |f| %>
              <button type="button"
                      id="ai-import-button"
                      data-ai-import-status-target="button"
                      class="inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
                </svg>
                <span>AI Import</span>
              </button>
              <%= f.file_field :file,
                     accept: ".xlsx,.xls,.ods,.docx,.doc,.pdf",
                     class: "hidden",
                     id: "ai-import-file",
                     onchange: "document.getElementById('ai-import-form').submit();" %>
            <% end %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
 <script>
  document.addEventListener("DOMContentLoaded", () => {
    const button = document.getElementById("ai-import-button");
    const fileInput = document.getElementById("ai-import-file");

    if (button && fileInput) {
      button.addEventListener("click", (e) => {
        e.preventDefault();
        fileInput.click();
      });
    }
  });
</script>