<% if notice.present? %>
  <p class="notice bg-green-100 text-green-700 rounded-lg text-2xl"
     style="padding:1rem 2rem;">
    <%= notice %>
  </p>
<% end %>
<% if alert.present? %>
  <p class="alert bg-red-100 text-red-700 rounded-lg text-2xl"
     style="padding:1rem 2rem;">
    <%= alert %>
  </p>
<% end %>
