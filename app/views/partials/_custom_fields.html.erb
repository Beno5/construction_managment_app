<%# Custom Fields Partial - Unified UI for both new and existing records
  # This partial provides a consistent form-style interface with inline editing support
  #
  # Parameters:
  #   - custom_fields: Hash of custom fields {key => value}
  #   - model: String, model name (e.g., 'task', 'project')
  #   - record: (optional) ActiveRecord object for inline editing on existing records
  #   - url: (optional) URL for PATCH requests (inline editing for existing records)
  #   - form_mode: (optional) Boolean, true if inside a form (uses form inputs), false for inline editing
%>

<% custom_fields ||= {} %>
<% record ||= nil %>
<% url ||= nil %>
<% form_mode ||= record.nil? %>

<div data-controller="custom-fields"
     data-custom-fields-model-value="<%= model %>"
     <% if record.present? %>
       data-custom-fields-url-value="<%= url %>"
       data-custom-fields-record-updated-at-value="<%= record.updated_at.iso8601 %>"
     <% end %>
     class="space-y-3">

  <div data-custom-fields-target="container">
    <% if custom_fields.any? %>
      <% custom_fields.each_with_index do |(key, value), index| %>
        <div data-custom-field-row
             data-custom-field-index="<%= index %>"
             <% if record.present? %>data-custom-field-key="<%= key %>"<% end %>
             class="flex items-center gap-3 mb-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg border border-gray-200 dark:border-gray-600">

          <div class="flex-1 grid grid-cols-2 gap-3">
            <!-- Key Input -->
            <div>
              <%= text_field_tag "#{model}[custom_fields][#{index}][key]",
                    key,
                    placeholder: t('custom_fields.field_name_placeholder', default: 'Field name'),
                    class: "w-full px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:text-white dark:placeholder-gray-400",
                    data: {
                      action: form_mode ? "input->track-changes#markChanged" : "",
                      track_changes_target: form_mode ? "input" : "",
                      custom_field_role: "key",
                      custom_field_original_key: key
                    },
                    required: true %>
            </div>

            <!-- Value Input -->
            <div>
              <%= text_field_tag "#{model}[custom_fields][#{index}][value]",
                    value,
                    placeholder: t('custom_fields.value_placeholder', default: 'Value'),
                    class: "w-full px-3 py-2 text-sm text-gray-900 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:text-white dark:placeholder-gray-400",
                    data: {
                      action: form_mode ? "input->track-changes#markChanged" : "",
                      track_changes_target: form_mode ? "input" : "",
                      custom_field_role: "value",
                      original_value: value
                    },
                    required: true %>
            </div>
          </div>

          <!-- Remove Button -->
          <% if form_mode %>
            <button type="button"
                    class="flex-shrink-0 p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition dark:text-red-400 dark:hover:bg-red-900/20"
                    data-action="click->custom-fields#removeField"
                    title="<%= t('custom_fields.remove', default: 'Remove field') %>">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          <% else %>
            <!-- Existing record: delete field with confirmation -->
            <button type="button"
                    class="flex-shrink-0 p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition dark:text-red-400 dark:hover:bg-red-900/20"
                    data-action="click->custom-fields#deleteField"
                    title="<%= t('custom_fields.remove', default: 'Remove field') %>">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Add Field Button -->
  <button type="button"
          data-action="click->custom-fields#addField"
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
    </svg>
    <%= t('custom_fields.add_field', default: 'Add Custom Field') %>
  </button>
</div>
