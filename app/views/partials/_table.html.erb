<section class="bg-gray-50 dark:bg-gray-900 pt-5">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 p-4">
        <div class="w-full md:w-1/2">
          <% if ["Documents", "SubTasks", "Resources"].include?(local_assigns[:model_name]) %>
            <h2 class="text-l font-semibold text-gray-900 sm:text-2xl dark:text-white  mb-4"><%= t("#{local_assigns[:model_name].downcase}.form.model_name_pl") %></h2>
          <% end %>
          <!-- pazi ovdje dinamiku model_name kad pozivas iz indexa mora biti dinamicno sa Model imenima da bi fukncionisalo sve dinamicki :) -->
          <form action="<%= local_assigns[:search_path] %>" 
      method="GET" 
      data-turbo-frame="<%= local_assigns[:frame_id] || "#{local_assigns[:model_name].downcase}-frame" %>" 
      class="lg:pr-3" 
      data-controller="search">
            <label for="search" class="sr-only">Search</label>
            <div class="relative mt-1 lg:w-64 xl:w-96">
              <input type="text" 
           name="search" 
           id="search" 
           placeholder="<%= t("table.search.#{local_assigns[:model_name].singularize.downcase}") %>..." 
<%= "disabled" if (defined?(@sub_task) && @sub_task.new_record?) || (defined?(@task) && @task.new_record?) %>
           class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg 
                  block w-full p-2.5 
                  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white
                  <%= (defined?(@sub_task) && @sub_task.new_record?) || (defined?(@task) && @task.new_record?) ? 
                        'cursor-not-allowed bg-gray-200 dark:bg-gray-600' : 
                        'focus:ring-primary-500 focus:border-primary-500 dark:focus:ring-primary-500 dark:focus:border-primary-500' %>"
           data-action="<%= 'input->search#performSearch' unless defined?(@sub_task) && @sub_task.new_record? %>">
            </div>
          </form>
        </div>
        <div class="w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 items-stretch md:items-center justify-end md:space-x-3 flex-shrink-0">
          <% if model_name == "Resources" %>
            <button type="button"
          data-target="resource-modal"
          data-mode="create"
          data-type="StandardResource"
<%= "disabled" if (defined?(@sub_task) && @sub_task.new_record?) || (defined?(@task) && @task.new_record?) %>
          class="open-modal resource-modal <%= "cursor-not-allowed" if (defined?(@sub_task) && @sub_task.new_record?) || (defined?(@task) && @task.new_record?) %> inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6 a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
              </svg>
              <%= t('table.new.resource') %>
            </button>
          <% elsif model_name == "Documents" %>
            <button type="button" <%= "disabled" if (defined?(@sub_task) && @sub_task.new_record?) || (defined?(@task) && @task.new_record?) %>
 data-target="documents-modal" class="open-modal <%= "cursor-not-allowed" if (defined?(@sub_task) && @sub_task.new_record?) || (defined?(@task) && @task.new_record?) %> inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6 a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
              </svg>
              <%= t('table.new.document') %>
            </button>
          <% else %>
            <% if local_assigns[:new_path].present? %>
              <%= button_to local_assigns[:new_path],
      method: :get, data: { turbo: false},
      class: "inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-white 
              rounded-lg #{'cursor-not-allowed bg-gray-400 dark:bg-gray-600 hover:bg-gray-400 dark:hover:bg-gray-600' if (defined?(@sub_task) && @sub_task.new_record?) || (defined?(@task) && @task.new_record?)}
              bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 
              dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800",
      disabled: (defined?(@sub_task) && @sub_task.new_record?) || (defined?(@task) && @task.new_record?) do %>
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6 a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
                </svg>
                <%= t("table.new.#{local_assigns[:model_name].singularize.downcase}") %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <turbo-frame id="<%= turbo_frame_id %>">
        <div class="overflow-x-auto">
          <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
              <tr>
                <% columns.each do |header, _| %>
                  <th scope="col" class="px-4 py-3"><%= header %></th>
                <% end %>
                <th scope="col" class="px-4 py-3">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody>
              <% if collection.empty? %>
                <tr>
                  <td colspan="<%= columns.size + 1 %>" class="px-4 py-6 text-center text-gray-500 dark:text-gray-400">
                    <p class="mb-4"> <%= t("table.empty.#{local_assigns[:model_name].singularize.downcase}") %></p>
                  </td>
                </tr>
              <% end %>
              <% collection.each do |item| %>
                <tr id="<%= dom_id(item) %>" class="border-b dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700">
                  <% columns.each do |_, attr| %>
                    <td class="px-4 py-3">
                      <% if attr.is_a?(Proc) %>
                        <%= attr.call(item) %>
                      <% elsif attr == :custom_fields && item.custom_fields.present? %>
                        <%= render 'partials/custom_fields_tooltip', item: item %>
                      <% else %>
                        <%= item.send(attr) %>
                      <% end %>
                    </td>
                  <% end %>
                  <td class="px-4 py-3 flex items-center justify-end">
                    <button id="<%= "#{model_name.downcase}-#{item.id}-dropdown-button" %>" 
                      data-dropdown-toggle="<%= "#{model_name.downcase}-#{item.id}-dropdown" %>" 
                      class="inline-flex items-center p-0.5 text-sm font-medium text-center text-gray-500 hover:text-gray-800 rounded-lg focus:outline-none dark:text-gray-400 dark:hover:text-gray-100" 
                      type="button">
                      <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
                      </svg>
                    </button>
                    <div id="<%= "#{model_name.downcase}-#{item.id}-dropdown" %>" class="hidden z-10 w-44 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600">
                      <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="<%= "#{model_name.downcase}-#{item.id}-dropdown-button" %>">
                        <% if model_name == "Resources" %>
                          <li>
                            <%= link_to t("table.actions.show.#{local_assigns[:model_name].singularize.downcase}") , '#', 
                            class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white open-modal resource-modal", 
                            data: { target: 'resource-modal', turbo: false, mode: 'show', type: item.activityable_type } %>
                          </li>
                          <li>
                            <%= link_to t("table.actions.edit.#{local_assigns[:model_name].singularize.downcase}"), '#',
                            class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white open-modal resource-modal",
                            data: { target: 'resource-modal', turbo: false, mode: 'edit', type: item.activityable_type, activity_id: item.id} %>
                          </li>
                          <li>
                            <%= link_to t("table.actions.delete.#{local_assigns[:model_name].singularize.downcase}"),
                             business_project_task_sub_task_activity_path(@business, @project, @task, @sub_task, item),
                             method: :delete, data: { turbo_confirm: t('confirmations.delete', name: item.try(:name) || item.try(:activityable)&.name),
                             turbo_method: :delete, item_id: item.id, item_type: item.model_name },
                             class: "delete-item-link block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
                          </li>
                        <% elsif model_name == "Documents"%>
                          <li>
                            <%= link_to t("table.actions.open.#{local_assigns[:model_name].singularize.downcase}"),
                              rails_blob_path(item.file, disposition: "attachment"),
                              class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white",
                              target: "_blank" %>
                          </li>
                          <li>
                            <%= link_to t("table.actions.edit.#{local_assigns[:model_name].singularize.downcase}"), '#',
                              class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white open-modal",
                              data: { target: 'documents-modal', turbo: false, mode: 'edit', id: item.id, controller: "edit-document", action: "click->edit-document#loadDocument"} %>
                          </li>
                          <li>
                            <%= link_to t("table.actions.delete.#{local_assigns[:model_name].singularize.downcase}"), document_path(item), method: :delete, data: { turbo_confirm: t('confirmations.delete', name: item.name), turbo_method: :delete }, class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
                          </li>
                        <% else %>
                          <% if model_name == "Businesses"%>
                            <li>
                              <%= form_with url: select_business_path(item), method: :post, data: { turbo: false } do %>
                                <%= submit_tag 'Izaberi Business', class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
                              <% end %>
                            </li>
                          <% end %>
                          <li>
                            <%= link_to t("table.actions.show.#{local_assigns[:model_name].singularize.downcase}"), local_assigns[:show_path].call(item),
                             data: { turbo: false }, class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
                          </li>
                          <li>
                            <% has_dependencies =
                              (item.respond_to?(:activities) && item.activities.exists?) ||
                              (item.respond_to?(:sub_tasks) && item.sub_tasks.exists?) %>
                            <% link_class = "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
                            <% link_class += " delete-item-link" if has_dependencies %>
                            <%= link_to t("table.actions.delete.#{local_assigns[:model_name].singularize.downcase}"),
                              local_assigns[:delete_path].call(item), method: :delete,
                              data: {
                                turbo_method: :delete,
                                item_id: item.id,
                                item_type: item.model_name
                              },
                              class: link_class %>
                          </li>
                        <% end %>
                      </ul>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </turbo-frame>
      <%= render "partials/nav_pages" %>
    </div>
  </div>
</section>
<%= render 'modals/delete_modal' %>
