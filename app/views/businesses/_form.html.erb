<%= render 'partials/header1', 
           title: @business.persisted? ? @business.name : t('businesses.form.new_title'),
           model_name: t('businesses.form.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [
             (@business.persisted? ? { name: @business.name, path: business_path(@business) } : { name: t('businesses.form.new_title'), path: nil })
           ] %>
<section class="bg-gray-50 dark:bg-gray-900 pt-5">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden p-6">
      <% if @business.new_record? %>
        <%= form_with(model: @business, local: true, html: { novalidate: true }, data: { controller: "create-form track-changes", action: "submit->create-form#validate" }) do |f| %>
          <div class="grid grid-cols-6 gap-6">
            <!-- Business Name -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :name, t('businesses.form.name') + '*', class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_field :name,
                    required: true,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white",
                    data: { create_form_target: "input" } %>
            </div>
            <!-- Business Address -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :address, t('businesses.form.address'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_field :address,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input" } %>
            </div>
            <!-- Phone Number -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :phone_number, t('businesses.form.phone_number'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.telephone_field :phone_number,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input" } %>
            </div>
            <!-- VAT Number -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :vat_number, t('businesses.form.vat_number'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_field :vat_number,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input" } %>
            </div>
            <!-- Registration Number -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :registration_number, t('businesses.form.registration_number'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_field :registration_number,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input" } %>
            </div>
            <!-- Owner First Name -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :owner_first_name, t('businesses.form.owner_first_name'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_field :owner_first_name,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input" } %>
            </div>
            <!-- Owner Last Name -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :owner_last_name, t('businesses.form.owner_last_name'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_field :owner_last_name,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input" } %>
            </div>
            <!-- Currency -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :currency, t('businesses.form.currency'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.select :currency,
                    Business.currencies.keys.map { |c| [c.capitalize, c] }, { include_blank: true },
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input" } %>
            </div>
            <!-- Working Hours Per Day -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :working_hours_per_day, t('businesses.form.working_hours_per_day'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.number_field :working_hours_per_day,
                    step: 0.25, min: 0, max: 24, required: true,
                    class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                    data: { create_form_target: "input" } %>
            </div>
          </div>
          <!-- Submit Button -->
          <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
            <%= f.submit(
                  t('businesses.form.create_button'),
                  data: {
                    track_changes_target: "saveButton",
                    turbo: false,
                    create_form_target: "submit",
                    action: "click->track-changes#skipNavigationPrompt"
                  },
                  class: "text-white bg-primary-700 hover:bg-primary-800 font-medium rounded-lg text-base px-6 py-3"
                ) %>
          </div>
        <% end %>
      <% else %>
        <div class="grid grid-cols-6 gap-6">
          <!-- Business Name -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('businesses.form.name') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="business"
                 data-inline-edit-field-value="name"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= business_path(@business) %>"
                 data-inline-edit-original-value="<%= @business.name %>"
                 data-inline-edit-record-updated-at-value="<%= @business.updated_at.iso8601 %>"
                 data-inline-edit-required-value="true"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @business.name %>
            </div>
          </div>
          <!-- Business Address -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('businesses.form.address') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="business"
                 data-inline-edit-field-value="address"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= business_path(@business) %>"
                 data-inline-edit-original-value="<%= @business.address %>"
                 data-inline-edit-record-updated-at-value="<%= @business.updated_at.iso8601 %>"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @business.address %>
            </div>
          </div>
          <!-- Phone Number -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('businesses.form.phone_number') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="business"
                 data-inline-edit-field-value="phone_number"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= business_path(@business) %>"
                 data-inline-edit-original-value="<%= @business.phone_number %>"
                 data-inline-edit-record-updated-at-value="<%= @business.updated_at.iso8601 %>"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @business.phone_number %>
            </div>
          </div>
          <!-- VAT Number -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('businesses.form.vat_number') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="business"
                 data-inline-edit-field-value="vat_number"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= business_path(@business) %>"
                 data-inline-edit-original-value="<%= @business.vat_number %>"
                 data-inline-edit-record-updated-at-value="<%= @business.updated_at.iso8601 %>"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @business.vat_number %>
            </div>
          </div>
          <!-- Registration Number -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('businesses.form.registration_number') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="business"
                 data-inline-edit-field-value="registration_number"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= business_path(@business) %>"
                 data-inline-edit-original-value="<%= @business.registration_number %>"
                 data-inline-edit-record-updated-at-value="<%= @business.updated_at.iso8601 %>"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @business.registration_number %>
            </div>
          </div>
          <!-- Owner First Name -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('businesses.form.owner_first_name') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="business"
                 data-inline-edit-field-value="owner_first_name"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= business_path(@business) %>"
                 data-inline-edit-original-value="<%= @business.owner_first_name %>"
                 data-inline-edit-record-updated-at-value="<%= @business.updated_at.iso8601 %>"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @business.owner_first_name %>
            </div>
          </div>
          <!-- Owner Last Name -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('businesses.form.owner_last_name') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="business"
                 data-inline-edit-field-value="owner_last_name"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= business_path(@business) %>"
                 data-inline-edit-original-value="<%= @business.owner_last_name %>"
                 data-inline-edit-record-updated-at-value="<%= @business.updated_at.iso8601 %>"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @business.owner_last_name %>
            </div>
          </div>
          <!-- Currency -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('businesses.form.currency') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="business"
                 data-inline-edit-field-value="currency"
                 data-inline-edit-type-value="select"
                 data-inline-edit-url-value="<%= business_path(@business) %>"
                 data-inline-edit-original-value="<%= @business.currency %>"
                 data-inline-edit-record-updated-at-value="<%= @business.updated_at.iso8601 %>"
                 data-inline-edit-options-value='<%= Business.currencies.keys.index_with { |c| c.capitalize }.merge("" => "").merge("" => "").to_json %>'
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @business.currency %>
            </div>
          </div>
          <!-- Working hours per day -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('businesses.form.working_hours_per_day') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="business"
                 data-inline-edit-field-value="working_hours_per_day"
                 data-inline-edit-type-value="number"
                 data-inline-edit-url-value="<%= business_path(@business) %>"
                 data-inline-edit-original-value="<%= @business.working_hours_per_day %>"
                 data-inline-edit-record-updated-at-value="<%= @business.updated_at.iso8601 %>"
                 data-action="dblclick->inline-edit#activate"
                 title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @business.working_hours_per_day %>
            </div>
          </div>
        </div>
        <div class="flex items-center justify-end gap-3 pt-6 mt-6 border-t border-gray-200 dark:border-gray-700">
          <%= link_to businesses_path,
              data: { controller: "track-changes", action: "click->track-changes#confirmNavigation", turbo: false },
              class: "px-6 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700" do %>
            <%= t('businesses.form.back_button', default: 'Back to Business') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
