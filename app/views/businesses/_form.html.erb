<%= render 'partials/header1', 
           title: @business.persisted? ? @business.name : t('businesses.form.new_title'),
           model_name: t('businesses.form.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [
             (@business.persisted? ? { name: @business.name, path: business_path(@business) } : { name: t('businesses.form.new_title'), path: nil })
           ] %>
<section class="bg-gray-50 dark:bg-gray-900 pt-5">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden p-6">
      <%= form_with model: @business, 
                    local: true, 
                    data: { controller: "track-changes", action: "submit->track-changes#reset" } do |f| %>
        <div class="grid grid-cols-6 gap-6">
          <!-- Business Name -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :name, t('businesses.form.name'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :name, 
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Business Address -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :address, t('businesses.form.address'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :address, 
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Phone Number -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :phone_number, t('businesses.form.phone_number'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.telephone_field :phone_number, 
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- VAT Number -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :vat_number, t('businesses.form.vat_number'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :vat_number, 
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Registration Number -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :registration_number, t('businesses.form.registration_number'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :registration_number, 
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Owner First Name -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :owner_first_name, t('businesses.form.owner_first_name'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :owner_first_name, 
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Owner Last Name -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :owner_last_name, t('businesses.form.owner_last_name'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :owner_last_name, 
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Currency -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :currency, t('businesses.form.currency'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.select :currency, 
                  Business.currencies.keys.map { |c| [c.capitalize, c] }, {}, 
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "change->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
        </div>
        <!-- Submit Button -->
        <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
          <%= f.submit(
                @business.persisted? ? t('businesses.form.update_button') : t('businesses.form.create_button'),
                data: { track_changes_target: "saveButton", turbo: false },
                class: "hidden text-white bg-primary-700 hover:bg-primary-800 font-medium rounded-lg text-base px-6 py-3"
              ) %>
        </div>
      <% end %>
    </div>
  </div>
</section>
