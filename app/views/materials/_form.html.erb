<%= render 'partials/header1', 
           title: @material.persisted? ? @material.name : t('materials.form.new_title'),
           model_name: t('materials.form.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [
             { name: t('materials.form.model_name'), path: business_materials_path(@current_business) },
             { name: (@material.persisted? ? @material.name : t('materials.form.new_title')), path: (@material.persisted? ? business_material_path(@current_business, @material) : nil) }
           ] %>
<section class="bg-gray-50 dark:bg-gray-900 pt-5" data-controller="toggle" data-section-id="material-basic-info" data-user-id="<%= current_user.id %>">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden p-4">
      <div class="flex items-center gap-4 mb-4">
        <h2 class="text-l font-semibold text-gray-900 sm:text-2xl dark:text-white"><%= t("businesses.form.basic_information") %></h2>
        <label class="inline-flex items-center cursor-pointer">
          <input type="checkbox"
                 id="material-info-toggle"
                 checked
                 class="sr-only peer"
                 data-action="change->toggle#toggle"
                 data-toggle-target="switch">
          <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600 dark:peer-checked:bg-blue-600"></div>
        </label>
      </div>
      <div data-toggle-target="content" class="transition-all duration-300">
      <%= form_with model: [@current_business, @material], 
                    local: true, 
                    data: { controller: "track-changes", action: "submit->track-changes#reset" } do |f| %>
        <div class="grid grid-cols-6 gap-6">
          <!-- Naziv -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :name, t('materials.form.name') + '*', class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :name,  required: true,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Cijena po jedinici -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :price_per_unit, t('materials.form.price_per_unit', currency: @material.business.currency_symbol), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.number_field :price_per_unit, step: 0.01,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Jedinica mjere -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :unit_of_measure, t('materials.form.unit_of_measure'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.select :unit_of_measure,
                  options_for_select(Material.unit_of_measures.keys.map { |key| [I18n.t("activerecord.attributes.material.unit_of_measures.#{key}"), key] }, @material.unit_of_measure),
                  { include_blank: t('materials.form.select_unit') },
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "change->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Opis -->
          <div class="col-span-6">
            <%= f.label :description, t('materials.form.description'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_area :description, rows: 3,
                  class: "block p-2.5 w-full text-sm text-gray-900 bg-white rounded-lg border border-gray-300 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Custom Polja -->
          <div class="col-span-6">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('materials.form.custom_fields') %></h3>
            <%= render 'partials/custom_fields', custom_fields: @material.custom_fields, model: 'material' %>
          </div>
        </div>
        <!-- Submit Button -->
        <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
          <%= f.submit(
                @material.persisted? ? t('materials.form.update_button') : t('materials.form.create_button'),
                data: { track_changes_target: "saveButton", turbo: false },
                class: "hidden text-white bg-primary-700 hover:bg-primary-800 font-medium rounded-lg text-base px-6 py-3"
              ) %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</section>
