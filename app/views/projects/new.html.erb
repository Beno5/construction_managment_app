<div class="flex items-center justify-center min-h-screen bg-gray-50 dark:bg-gray-900">
  <div class="w-full max-w-4xl px-4 py-6 bg-white rounded-lg shadow-md dark:bg-gray-800">
    <!-- Header -->
    <div class="flex items-start justify-between border-b pb-4 mb-4 dark:border-gray-700">
      <h3 class="text-2xl font-semibold text-gray-900 dark:text-white">
        Create New Project
      </h3>
    </div>

    <!-- New Project Form -->
    <%= form_with model: @project, local: true do |f| %>
      <div class="grid grid-cols-6 gap-6">
        <!-- Name -->
        <div class="col-span-6 sm:col-span-3">
          <%= f.label :name, "Project Name", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_field :name, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>

        <!-- Project Type -->
        <div class="col-span-6 sm:col-span-3">
          <%= f.label :project_type, "Project Type", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_field :project_type, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>

        <!-- Address -->
        <div class="col-span-6">
          <%= f.label :address, "Project Address", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_field :address, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>

        <!-- Project Manager -->
        <div class="col-span-6 sm:col-span-3">
          <%= f.label :project_manager, "Project Manager", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_field :project_manager, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>

        <!-- Planned Start Date -->
        <div class="col-span-6 sm:col-span-3">
          <%= f.label :planned_start_date, "Planned Start Date", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.date_field :planned_start_date, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>

        <!-- Planned End Date -->
        <div class="col-span-6 sm:col-span-3">
          <%= f.label :planned_end_date, "Planned End Date", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.date_field :planned_end_date, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>

        <!-- Estimated Cost -->
        <div class="col-span-6 sm:col-span-3">
          <%= f.label :estimated_cost, "Estimated Cost (â‚¬)", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.number_field :estimated_cost, step: 0.01, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>

        <!-- Status -->
        <div class="col-span-6 sm:col-span-3">
          <%= f.label :status, "Project Status", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.select :status, Project.statuses.keys, {}, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>

        <!-- Description -->
        <div class="col-span-6">
          <%= f.label :description, "Project Description", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_area :description, rows: 4, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="flex items-center justify-end pt-6 border-t border-gray-200 rounded-b dark:border-gray-700">
        <%= f.submit "Create Project", class: "text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
      </div>
    <% end %>
  </div>
</div>
