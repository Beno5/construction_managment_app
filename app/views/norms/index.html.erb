<%
  model_name = "Norms" # koristi se za dinamične partiale

  paths = {
    norms: business_norms_path(@current_business),
    new_norm: new_business_norm_path(@current_business),
    edit_norm: ->(norm) { edit_business_norm_path(@current_business, norm) },
    show_norm: ->(norm) { business_norm_path(@current_business, norm) },
    delete_norm: ->(norm) { business_norm_path(@current_business, norm) }
  }
%>
<%= render 'partials/header1',
           title: t('norms.title'),
           model_name: model_name,
           search_path: paths[:norms],
           new_path: paths[:new_norm],
           additional_crumbs: [
             { name: t('norms.title'), path: paths[:norms] }
           ] %>
<%= render 'partials/table',
           collection: @norms,
           columns: {
             t('norms.form.name') => :name,
             t('norms.form.description') => :description,
             t('norms.form.unit_of_measure') => :unit_of_measure,
             t('norms.form.norm_value') => ->(norm) { norm.norm_value.to_s },
             t('norms.form.norm_type') => ->(norm) { I18n.t("activerecord.attributes.norm.norm_type.#{norm.norm_type}", default: norm.norm_type.to_s.humanize) },
             t('norms.form.subtype')   => ->(norm) { norm.subtype ? I18n.t("activerecord.attributes.norm.subtype.#{norm.subtype}", default: norm.subtype.to_s.humanize) : '-' },
             t('norms.form.info') => :info
           },
           turbo_frame_id: "norms-frame",
           model_name: model_name,
           search_path: paths[:norms],
           new_path: paths[:new_norm],
           edit_path: paths[:edit_norm],
           show_path: paths[:show_norm],
           delete_path: paths[:delete_norm],
           actions: [] %>
