<%= render 'partials/header1',
           title: @norm.persisted? ? @norm.name : t('norms.form.new_title', default: 'Nova norma'),
           model_name: t('norms.form.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [
             { name: t('norms.form.model_name'), path: business_norms_path(@current_business) },
             { name: (@norm.persisted? ? @norm.name : t('norms.form.new_title', default: 'Nova norma')), path: (@norm.persisted? ? business_norm_path(@current_business, @norm) : nil) }
           ] %>
<section class="bg-gray-50 dark:bg-gray-900 pt-5">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden p-4">
      <h2 class="text-l font-semibold text-gray-900 sm:text-2xl dark:text-white mb-4">
        <%= t("businesses.form.basic_information") %>
      </h2>
      <% if @norm.new_record? %>
        <%= form_with model: [@current_business, @norm],
                      local: true,
                      html: { novalidate: true },
                      data: { controller: "create-form", action: "submit->create-form#validate" } do |f| %>
          <div class="grid grid-cols-6 gap-6">
            <!-- Name -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :name, t('norms.form.name') + '*', class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_field :name,
                               required: true,
                               class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white",
                               data: { create_form_target: "input" } %>
            </div>
            <!-- Norm type -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :norm_type, t('norms.form.norm_type'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.select :norm_type,
                           Norm.norm_types.keys.map { |k| [t("activerecord.attributes.norm.norm_types.#{k}", default: k.humanize), k] },
                           { include_blank: true },
                           class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                           data: { create_form_target: "input" } %>
            </div>
            <!-- Subtype -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :subtype, t('norms.form.subtype'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.select :subtype,
                           [["-", nil]] + Norm.subtypes.keys.map { |k| [t("activerecord.attributes.norm.subtypes.#{k}", default: k.humanize), k] },
                           { include_blank: true },
                           class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                           data: { create_form_target: "input" } %>
            </div>
            <!-- Unit of measure -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :unit_of_measure, t('norms.form.unit_of_measure'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.select :unit_of_measure,
             options_for_select(all_unit_options, @norm.unit_of_measure),
             { include_blank: t('norms.form.select_unit', default: 'Odaberite jedinicu') },
             class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
             data: { create_form_target: "input" } %>
            </div>
            <!-- Norm value -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :norm_value, t('norms.form.norm_value'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.number_field :norm_value, step: 0.0001,
                                 class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                                 data: { create_form_target: "input" } %>
            </div>
            <!-- Info -->
            <div class="col-span-6 sm:col-span-3">
              <%= f.label :info, t('norms.form.info'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_field :info,
                               class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                               data: { create_form_target: "input" } %>
            </div>
            <!-- Description -->
            <div class="col-span-6">
              <%= f.label :description, t('norms.form.description'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_area :description, rows: 3,
                               class: "block p-2.5 w-full text-sm text-gray-900 bg-white rounded-lg border border-gray-300 dark:bg-gray-700 dark:border-gray-600 dark:text-white",
                               data: { create_form_target: "input" } %>
            </div>
          </div>
          <div class="col-span-6 mt-2">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('norms.form.custom_fields', default: 'Prilagođena polja') %></h3>
            <%= render 'partials/custom_fields', custom_fields: @norm.custom_fields, model: 'norm' %>
          </div>
          <!-- Submit Button -->
          <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
            <%= f.submit(
                  t('norms.form.create_button', default: 'Kreiraj normu'),
                  data: { turbo: false, create_form_target: "submit" },
                  class: "text-white bg-primary-700 hover:bg-primary-800 font-medium rounded-lg text-base px-6 py-3"
                ) %>
          </div>
        <% end %>
      <% else %>
        <div class="grid grid-cols-6 gap-6">
          <!-- Name -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('norms.form.name') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="norm"
                 data-inline-edit-field-value="name"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= business_norm_path(@current_business, @norm) %>"
                 data-inline-edit-original-value="<%= @norm.name %>"
                 data-inline-edit-record-updated-at-value="<%= @norm.updated_at.iso8601 %>"
                 data-inline-edit-required-value="true"
                 data-action="dblclick->inline-edit#activate"
              title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @norm.name %>
            </div>
          </div>
          <!-- Norm type -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('norms.form.norm_type') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="norm"
                 data-inline-edit-field-value="norm_type"
                 data-inline-edit-type-value="select"
                 data-inline-edit-url-value="<%= business_norm_path(@current_business, @norm) %>"
                 data-inline-edit-original-value="<%= @norm.norm_type %>"
                 data-inline-edit-record-updated-at-value="<%= @norm.updated_at.iso8601 %>"
                 data-inline-edit-options-value='<%= Norm.norm_types.keys.index_with { |k| t("activerecord.attributes.norm.norm_types.#{k}", default: k.humanize) }.merge("" => "").to_json %>'
                 data-action="dblclick->inline-edit#activate"
              title="<%= t('tooltips.double_click_to_edit') %>">
              <%= t_enum(@norm, :norm_type) %>
            </div>
          </div>
          <!-- Subtype -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('norms.form.subtype') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="norm"
                 data-inline-edit-field-value="subtype"
                 data-inline-edit-type-value="select"
                 data-inline-edit-url-value="<%= business_norm_path(@current_business, @norm) %>"
                 data-inline-edit-original-value="<%= @norm.subtype %>"
                 data-inline-edit-record-updated-at-value="<%= @norm.updated_at.iso8601 %>"
                 data-inline-edit-options-value='<%= Norm.subtypes.keys.index_with { |k| t("activerecord.attributes.norm.subtypes.#{k}", default: k.humanize) }.merge({ "" => "-" }).merge("" => "").to_json %>'
                 data-action="dblclick->inline-edit#activate"
              title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @norm.subtype ? t("activerecord.attributes.norm.subtypes.#{@norm.subtype}", default: @norm.subtype.humanize) : "-" %>
            </div>
          </div>
          <!-- Unit of measure -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('norms.form.unit_of_measure') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="norm"
                 data-inline-edit-field-value="unit_of_measure"
                 data-inline-edit-type-value="select"
                 data-inline-edit-url-value="<%= business_norm_path(@current_business, @norm) %>"
                 data-inline-edit-original-value="<%= @norm.unit_of_measure %>"
                 data-inline-edit-record-updated-at-value="<%= @norm.updated_at.iso8601 %>"
                 data-inline-edit-options-value='<%= all_unit_options.to_h { |label, key| [key, label] }.merge("" => "").to_json %>'
                 data-action="dblclick->inline-edit#activate"
              title="<%= t('tooltips.double_click_to_edit') %>">
              <%= t_enum(@norm, :unit_of_measure) %>
            </div>
          </div>
          <!-- Norm value -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('norms.form.norm_value') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="norm"
                 data-inline-edit-field-value="norm_value"
                 data-inline-edit-type-value="number"
                 data-inline-edit-url-value="<%= business_norm_path(@current_business, @norm) %>"
                 data-inline-edit-original-value="<%= @norm.norm_value %>"
                 data-inline-edit-record-updated-at-value="<%= @norm.updated_at.iso8601 %>"
                 data-action="dblclick->inline-edit#activate"
              title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @norm.norm_value %>
            </div>
          </div>
          <!-- Info -->
          <div class="col-span-6 sm:col-span-3">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('norms.form.info') %></label>
            <div class="shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="norm"
                 data-inline-edit-field-value="info"
                 data-inline-edit-type-value="text"
                 data-inline-edit-url-value="<%= business_norm_path(@current_business, @norm) %>"
                 data-inline-edit-original-value="<%= @norm.info %>"
                 data-inline-edit-record-updated-at-value="<%= @norm.updated_at.iso8601 %>"
                 data-action="dblclick->inline-edit#activate"
              title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @norm.info %>
            </div>
          </div>
          <!-- Description -->
          <div class="col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('norms.form.description') %></label>
            <div class="block p-2.5 w-full text-sm text-gray-900 bg-white rounded-lg border border-gray-300 dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600"
                 data-controller="inline-edit"
                 data-inline-edit-model-value="norm"
                 data-inline-edit-field-value="description"
                 data-inline-edit-type-value="textarea"
                 data-inline-edit-url-value="<%= business_norm_path(@current_business, @norm) %>"
                 data-inline-edit-original-value="<%= @norm.description %>"
                 data-inline-edit-record-updated-at-value="<%= @norm.updated_at.iso8601 %>"
                 data-action="dblclick->inline-edit#activate"
              title="<%= t('tooltips.double_click_to_edit') %>">
              <%= @norm.description %>
            </div>
          </div>
          <!-- Custom Fields -->
          <div class="col-span-6">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('norms.form.custom_fields', default: 'Prilagođena polja') %></h3>
            <%= render 'partials/custom_fields', custom_fields: @norm.custom_fields, model: 'norm' %>
          </div>
        </div>
        <div class="flex items-center justify-end gap-3 pt-6 mt-6 border-t border-gray-200 dark:border-gray-700">
          <%= link_to business_norms_path(@current_business),
                      data: { controller: "track-changes", action: "click->track-changes#confirmNavigation", turbo: false },
                      class: "px-6 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700" do %>
            <%= t('norms.form.back_button', default: 'Back to Norms') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
