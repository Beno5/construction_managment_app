<%= render 'partials/header1', 
           title: @norm.persisted? ? @norm.name : t('norms.form.new_title', default: 'Nova norma'),
           model_name: t('norms.form.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [
             { name: t('norms.form.model_name'), path: business_norms_path(@current_business) },
             { name: (@norm.persisted? ? @norm.name : t('norms.form.new_title', default: 'Nova norma')), path: (@norm.persisted? ? business_norm_path(@current_business, @norm) : nil) }
           ] %>
<section class="bg-gray-50 dark:bg-gray-900 pt-5">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden p-4">
      <h2 class="text-l font-semibold text-gray-900 sm:text-2xl dark:text-white mb-4">
        <%= t("businesses.form.basic_information") %>
      </h2>
      <%= form_with model: [@current_business, @norm],
                    local: true,
                    data: { controller: "track-changes", action: "submit->track-changes#reset" } do |f| %>
        <div class="grid grid-cols-6 gap-6">
          <!-- Naziv norme -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :name, t('norms.form.name') + '*', class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :name, required: true,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Tip norme -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :norm_type, t('norms.form.norm_type'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.select :norm_type,
                  Norm.norm_types.keys.map { |k| [t("activerecord.attributes.norm.norm_types.#{k}", default: k.humanize), k] },
                  {},
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "change->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Podtip (ako je tip radnik) -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :subtype, t('norms.form.subtype'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.select :subtype,
                  [["-", nil]] + Norm.subtypes.keys.map { |k| [t("activerecord.attributes.norm.subtypes.#{k}", default: k.humanize), k] },
                  {},
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "change->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Jedinica mjere -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :unit_of_measure, t('norms.form.unit_of_measure'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.select :unit_of_measure,
        options_for_select(all_unit_options, @norm.unit_of_measure),
        { include_blank: t('norms.form.select_unit', default: 'Odaberite jedinicu') },
        class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
        data: { action: "change->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Vrijednost norme -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :norm_value, t('norms.form.norm_value'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.number_field :norm_value, step: 0.0001, required: true,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Info -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :info, t('norms.form.info'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :info,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Opis -->
          <div class="col-span-6">
            <%= f.label :description, t('norms.form.description'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_area :description, rows: 3,
                  class: "block p-2.5 w-full text-sm text-gray-900 bg-white rounded-lg border border-gray-300 dark:bg-gray-700 dark:border-gray-600 dark:text-white",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Custom Polja -->
          <div class="col-span-6">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('norms.form.custom_fields', default: 'Prilagođena polja') %></h3>
            <%= render 'partials/custom_fields', custom_fields: @norm.custom_fields, model: 'norm' %>
          </div>
        </div>
        <!-- Submit Button -->
        <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
          <%= f.submit(
                @norm.persisted? ? t('norms.form.update_button', default: 'Sačuvaj promjene') : t('norms.form.create_button', default: 'Kreiraj normu'),
                data: { track_changes_target: "saveButton", turbo: false },
                class: "hidden text-white bg-primary-700 hover:bg-primary-800 font-medium rounded-lg text-base px-6 py-3"
              ) %>
        </div>
      <% end %>
    </div>
  </div>
</section>
