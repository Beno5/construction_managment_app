<%= render 'partials/header1',
           title: @task.persisted? ?
                      t('breadcrums.task_overview', name: @task.name_with_position) :
                      t('tasks.form.new_title'),
           model_name: t('tasks.form.model_name'),
           search_path: nil,
           new_path: nil,
           additional_crumbs: [
             { name: t('breadcrums.project_overview', name: @project.name), path: business_project_path(@current_business, @project) },
             { name: (@task.persisted? ? t('breadcrums.task_overview', name: @task.name_with_position) : t('tasks.form.new_title')),
               path: (@task.persisted? ? business_project_task_path(@current_business, @project, @task) : nil) }
           ] %>
<section class="bg-gray-50 dark:bg-gray-900 pt-5">
  <div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden p-4">
      <h2 class="text-l font-semibold text-gray-900 sm:text-2xl dark:text-white mb-4"><%= t("businesses.form.basic_information") %></h2>
      <%= form_with model: [@current_business, @project, @task],
                    local: true,
                    data: { controller: "track-changes", action: "submit->track-changes#reset" } do |f| %>
        <div class="grid grid-cols-6 gap-6">
          <!-- Name -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :name, t('tasks.form.name') + '*', class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :name,  required: true,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                          focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5
                          dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Description -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :description, t('tasks.form.description'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_area :description,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                          focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5
                          dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Planned Start Date -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :planned_start_date, t('tasks.form.planned_start_date'),
                  class: "block mb-2 text-sm font-medium #{@task.sub_tasks.any? ? 'text-gray-500' : 'text-gray-900'} dark:text-white" %>
            <%= f.date_field :planned_start_date,
                  disabled: @task.sub_tasks.any?,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                          block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600
                          #{@task.sub_tasks.any? ? 'cursor-not-allowed bg-gray-200' : ''}",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Planned End Date -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :planned_end_date, t('tasks.form.planned_end_date'),
                  class: "block mb-2 text-sm font-medium #{@task.sub_tasks.any? ? 'text-gray-500' : 'text-gray-900'} dark:text-white" %>
            <%= f.date_field :planned_end_date,
                  disabled: @task.sub_tasks.any?,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                          block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600
                          #{@task.sub_tasks.any? ? 'cursor-not-allowed bg-gray-200' : ''}",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Planned Cost -->
          <div class="col-span-6 sm:col-span-3">
            <%= f.label :planned_cost, t('tasks.form.planned_cost', currency: @project.business.currency_symbol),
                  class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.number_field :planned_cost, step: 0.01,
                  class: "shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                          block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600",
                  data: { action: "input->track-changes#markChanged", track_changes_target: "input" } %>
          </div>
          <!-- Custom Fields -->
          <div class="col-span-6">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('tasks.form.custom_fields') %></h3>
            <%= render 'partials/custom_fields', custom_fields: @task.custom_fields, model: 'task' %>
          </div>
        </div>
        <!-- Save Button -->
        <div class="flex items-center justify-end pt-6 border-gray-200 rounded-b dark:border-gray-700">
          <%= f.submit(
                @task.persisted? ? t('tasks.form.update_button') : t('tasks.form.create_button'),
                data: { track_changes_target: "saveButton", turbo: false },
                class: "hidden text-white bg-primary-700 hover:bg-primary-800 font-medium rounded-lg text-base px-6 py-3"
              ) %>
        </div>
      <% end %>
    </div>
  </div>
</section>
